extends ../backstage_layou

block content
	.layui-body(style="margin:80px 20px 0px 20px;")
		blockquote.layui-elem-quote.news_search
			.layui-inline
				a.layui-btn.layui-btn-normal(href="/admin/catetory/new") 添加分类
		table.layui-table
			thead
				tr
					th 分类名称						
					th 二级分类
					th 录入时间					
					th 操作
				tbody
					each item in catetories
						tr(class="item-id-#{item._id}")
							td #{item.name}	
							if item.childcates >0							
							td
								each i in item.childcates
									button.layui-btn.layui-btn-sm.layui-btn-normal(type="button",value="#{i.name}") #{i.name}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td 
								a.layui-btn.layui-btn-sm(target="_blank",href="/catetory/update/#{item._id}")
									|<i class="layui-icon">&#xe642;</i>编辑
								button.layui-btn.layui-btn-sm.layui-btn-danger(type="button",date-id="#{item._id}")
									|<i class="layui-icon">&#xe640;</i>删除
	script(src="/js/admin.js")
	script.
		$('dd:contains(分类管理)').addClass('layui-this');
