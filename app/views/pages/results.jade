extends ../layout

block content
	script.
		$(document).ready(function(){ 
			$('#myCarousel').carousel({interval:3000});
			$('#myCarousel').carousel({pause});
		}); 

	.container(style="margin-bottom:30px; padding-letf:0; padding-right:0")
		.row(style="margin-bottom:30px")
			.panel.panel-primary
				.panel-heading
					h3 #{keyword}
				.panel-body
					if products && products.length > 0
						each item in products
							.col-md-2.col-xs-2
								.thumbnail.text-center
									a(href="/movie/#{item._id}")										
										img(src="#{item.product_poster}",alt="#{item.product_title}")
									.caption.text-center
										p #{item.product_title}
										p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 查看详情
					else
						h2 暂无商品
			ul.pagination
				- for(var i = 0; i < totalPage ; i++){
					-if(currentPage === (i + 1)){
						li.active
							span #{currentPage}
					-}
					-else{
						li
							a(href='/results?p=#{i}&#{query}') #{i+1}
					-}
				-}
	//-.container(style="margin-bottom:60px")
		.row
			.panel.panel-default.col-md-4(style="margin-left:30px;")
				.panel-body 
					p.label.label-success 会员列表
					each user in users
						.media
							a.pull-left(href="#")
								img.media-object.img-circle(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
							.media-body
								h4.meida-heading #{user.name}
