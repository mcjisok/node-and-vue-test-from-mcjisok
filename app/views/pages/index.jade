extends ../layout

block content
	script.
		$(document).ready(function(){ 
			$('#myCarousel').carousel({interval:3000});
			$('#myCarousel').carousel({pause});
		}); 

	.container(style="margin-bottom:30px; padding-letf:0; padding-right:0")
		.row(style="margin-bottom:30px")
			#myCarousel.carousel.slide
				ol.carousel-indicators
					li.active(data-target="#myCarousel",data-slide-to="0")
					li(data-target="#myCarousel",data-slide-to="1")
					li(data-target="#myCarousel",data-slide-to="2")
				.carousel-inner
					.item.active
						img(src="images/lunbo1.png",alt="ceshi")
					.item
						img(src="images/lunbo1.png",alt="ceshi")
					.item
						img(src="images/lunbo1.png",alt="ceshi")
				a.carousel-control.left(href="#myCarousel",data-slide="prev") 1
				a.carousel-control.right(href="#myCarousel",data-slide="next") 1
		each cat in catetories
			.panel.panel-primary
				.panel-heading
					h3 #{cat.name}
				.panel-body
					if cat.products && cat.products.length > 0
						each item in cat.products
							.col-md-3.col-xs-6
								.thumbnail.text-center
									a(href="/movie/#{item._id}")
										img(src="#{item.product_poster}",alt="#{item.product_title}")
									.caption.text-center
										h3 #{item.product_title}
										p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
	//-.container(style="margin-bottom:60px")
		.row
			.panel.panel-default.col-md-4(style="margin-left:30px;")
				.panel-body 
					p.label.label-success 会员列表
					each user in users
						.media
							a.pull-left(href="#")
