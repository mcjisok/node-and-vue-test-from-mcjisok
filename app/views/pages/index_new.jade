	.hotSale
		each cat in catetories
			.hotTitle
				h3 #{cat.name}	
			.hotSale_prd
				if cat.products && cat.products.length > 0
						each item in cat.products
							.hotSale_prd_box
								.gds_img
									a(href="/movie/#{item._id}",target="_blank")
										div.imgbx
											img(src="#{item.product_poster[0]}",alt="#{item.product_title}",width="150")
										.saled 已售
											span #{item.product_salesvolume}件
								.gds_msg
									a(href="/movie/#{item._id}")
										p.prd_title #{item.product_title}
										span.prd_price ￥
											em #{item.product_price}
										span.prd_market_price ￥
											em #{item.product_price}
										.join
											a(href="#") 加入购物车	
	.sale_f
		.sale_floor
			.cage_title
				h2 1F 奶粉
			.warp_left
				.warp_left_cage
					a(href="#") 奶粉
