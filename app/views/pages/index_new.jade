					a(href="#") 其他奶粉
					a(href="#") 国产奶粉
				.warp_left_img
					a(href="#")
						img(src="images/warp_left1.jpg")
			.warp_right
				.sale_floor_prd
					.floor_prd_img
						a(href="#")
							img(src="images/fllor_prd (1).jpg",width="170")
					.floor_prd_title
